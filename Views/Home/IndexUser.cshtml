@model Biluthyrning.Models.User
@{
    ViewData["Title"] = "User Home Page";
}

<div class="text-center">
    <div class="row justify-content-center">
        <div class="card mt-3 bg-white bg-opacity-75 w-50" style="padding:2em; border-radius:2em;">
            <div class="col">
                <div>
                    <h1 class="display-4">Welcome @ViewBag.UserName</h1>
                    <h5>You are logged in </h5>
                    <a class="w-50 btn btn-success btn-sm rounded mt-2" asp-action="Logout">Logout</a>
                    <a class="w-50 btn btn-primary btn-sm rounded mt-2" asp-controller="Bookings" asp-action="Info">How to rent</a>
                </div>
            </div>
        </div>
    </div>
</div>