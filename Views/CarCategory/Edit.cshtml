@model Biluthyrning.Models.CarCategory

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="card mt-3 bg-white bg-opacity-75 w-50" style="padding:10px; border-radius:2em; padding:2em;">
        <h1>Edit</h1>
        <h4>CarCategory</h4>
        <hr />
