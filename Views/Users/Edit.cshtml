@model Biluthyrning.Models.User

@{
    ViewData["Title"] = "Edit";
}
<div class="row justify-content-center">
    <div class="card mt-3 bg-white bg-opacity-75 w-50" style="padding:10px; border-radius:2em; padding:2em;">

        <h1>Edit</h1>
        <hr />
        <div class="row">
            <div class="col">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    @if (ViewBag.UserType == "User")
                    {
                        <input type="hidden" asp-for="IsAdmin" />
                    }
                    else
                    {
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                            </label>
                        </div>
                    }
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success btn-sm rounded mt-2"/>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a class="btn btn-danger btn-sm rounded mt-2" asp-action="Delete" asp-route-id="@Model?.UserId">Delete</a>
            <a class="btn btn-primary btn-sm rounded mt-2" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}